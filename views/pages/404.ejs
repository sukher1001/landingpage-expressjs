    <style>
        .error-page {
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            padding: 40px 20px;
        }
        .error-content h1 {
            font-size: 120px;
            font-weight: bold;
            margin-bottom: 20px;
            color: var(--primary-color);
        }
        .error-content h2 {
            font-size: 32px;
            margin-bottom: 20px;
